<% include ../partials/header %>
<% include ../partials/alerts %>
<% include ../partials/nav %>
<% include ../partials/side-nav %>

<main id="admin" class="main-content-container">

<section class="admin main">
    <div class="container">
        
        <form id="page" action="/pages/new" method="POST" data-gramm_editor="false">
            
            <div class="col-sm-12 col-md-8 offset-md-2">
                <h3>Create A New Page</h3>
                <div class="row">
                    <div class="col-5">
                        <div class="form-group">
                            <label>Title</label>
                            <input class="form-control" type="text" name="name" placeholder="Example of a title" required>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="form-group">
                            <label>URL</label>
                            <div class="form--input__url">
                                <input id="domain-url" class="form-control" type="text" name="slug" placeholder="enter-a-nice-url" required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" type="text" name="description" placeholder="Describe this page in approx 100 characters" required></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label>Page Category</label>
                            <div class="form--input__url">
                                <select class="form-control" type="text" name="category"  required>
                                    <% allCategories.forEach(function(category){ %>
                                        <option value="<%= category.slug %>"><%= category.name %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div id="sortable">
                            <div class="to-be-sorted">
                                
                                <div class="section-handle" data-toggle="collapse" data-target="#section-0" data-sect="0">
                                    <div class="grab"></div>
                                    <span id="sectionTitle-0">Section Title</span>
                                    <span class="sctnToggle"></span>
                                </div>

                                <section class="section">
                                    <div id="section-0" class="collapse">
                                        <div class="row">
                                             <div class="col-12">
                                                <div class="form-group">
                                                    <label>Section Title</label>
                                                    <div class="form--input__url">
                                                        <input class="form-control section-title" type="text" name="section" data-title="sectionTitle-0" placeholder="Section Title" required />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                             <div class="col-12">
                                                <div class="form-group">
                                                    <label>WYSIWYG</label>
                                                    <textarea class="form-control froala" type="text" name="content">
                                                    </textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col">
                                                <div class="form-group">
                                                    <div class="code-view">
                                                        <h5>Hide</h5>
                                                        <input type="hidden" class="hidden-hide-check" name="htmlHide" value="false" />
                                                        <label class="switch">
                                                            <input class="code-hide" class="hidden-hide-check" type="checkbox">
                                                            <span class="slider round"></span>
                                                        </label>
                                                    </div>
                                                    <label>HTML</label>
                                                    <textarea id="html-cm-0" class="code-codemirror" data-type="html" class="form-control" type="text" name="html"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col">
                                                 <div class="form-group">
                                                    <div class="code-view">
                                                        <h5>Hide</h5>
                                                        <input type="hidden" class="hidden-hide-check" name="cssHide" value="false" />
                                                        <label class="switch">
                                                            <input class="code-hide" type="checkbox">
                                                            <span class="slider round"></span>
                                                        </label>
                                                    </div>
                                                    <label>SCSS</label>
                                                    <textarea id="css-cm-0" class="code-codemirror" data-type="css" class="form-control" type="text" name="css"></textarea>
                                                </div> 
                                            </div>
                                        </div>
                                        <div class="section--manage">
                                            <button class="btn btn-delete dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Delete
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                                <p>Are you sure you want to remove this section?</p>
                                                <a href="#" class="remove-btn">Confirm</a>
                                                <span class="close-btn">Cancel</span>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>
                        <a href="#" id="addSctnBtn" class="btn btn-admin">Add new section</a>
                    </div>
                </div>

                <!-- Empty Added Section // Probably bettter to add this section via AJAX or another method -->
                <div id="newSctn" class="to-be-sorted hide">
                    <div id="toggleReplace" class="section-handle" data-toggle="collapse" data-target="#section-REPLACE" data-sect="REPLACE">
                        <div class="grab"></div>
                        <span id="sectionTitle-REPLACE">New Section</span>
                        <span class="toggle-symbol"></span>
                    </div>
                    <section class="section">
                        <div id="section-REPLACE" class="collapse">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Section Title</label>
                                        <div class="form--input__url">
                                            <input class="form-control section-title" data-title="sectionTitle-REPLACE" type="text" name="page[section]" value="" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>WYSIWYG</label>
                                        <textarea class="form-control newFroala" type="text" name="page[content]"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <div class="code-view">
                                            <h5>Hide</h5>
                                            <input type="hidden" class="hidden-hide-check" name="page[htmlHide]" value="" />
                                            <label class="switch">
                                                <input class="code-hide" type="checkbox">
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                        <label>HTML</label>
                                        <textarea id="html-cm-REPLACE" class="code-codemirror" data-type="html" class="form-control" type="text" name="page[html]"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <div class="code-view">
                                            <h5>Hide</h5>
                                            <input type="hidden" class="hidden-hide-check" name="page[cssHide]" value="" />
                                            <label class="switch">
                                                <input class="code-hide" type="checkbox">
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                        <label>SCSS</label>
                                        <textarea id="css-cm-REPLACE" class="code-codemirror" data-type="css" class="form-control" type="text" name="page[css]"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="section--manage">
                                <button class="btn btn-delete dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Delete
                                </button>
                                <div class="dropdown-menu  dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                    <p>Are you sure you want to remove this section?</p>
                                    <a href="#" class="remove-btn">Confirm</a>
                                    <span class="close-btn">Cancel</span>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>

                 <div class="admin-tools">
                    <div class="container">
                        <div class="row">
                            <div class="col-8 offset-2">
                                <div class="col">
                                    <button type="submit" id="formSbmt" class="btn pull-right btn-primary">Create page</button>
                                    <button onclick="window.location='http://your.com';return false;" class="btn btn-primary-outline">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</section>
<% include ../partials/footer %>
<% include ./partials/header %>

<% include ./partials/alerts %>

<main id="main" class="login">

<section class="login">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4 login-form">
                <img src="/img/zoopla_logo.svg" alt="Zoopla Logo" />
                <br />
                <br />
                <p>A testing suite for Zoopla UX ideation and creative thinking. If this is your first time here, please <a href="/register">register</a></p>
                <form action="/forgot" method="POST">
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" type="text" name="username" placeholder="john.smith@zoopla.co.uk" pattern=".+@zoopla.co.uk" title="Must be a zoopla.co.uk email address" required>
                    </div>
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Send magic link</button>
                </form>
            </div>
        </div>
    </div>
</section>
<% include ./partials/footer %>